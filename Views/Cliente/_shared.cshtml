@model Dynamic.Models.Cliente



<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-row">
    <div class="form-group col-md-5">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Sexo" class="form-label"></label>
        <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<Sexo>()" class="form-control">
            <option selected="selected" value=""></option>
        </select>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-secondary" asp-action="Index" role="button">Cancelar</a>
        </div>
    </div>
    <div class="form-group col-md-3">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
</div>